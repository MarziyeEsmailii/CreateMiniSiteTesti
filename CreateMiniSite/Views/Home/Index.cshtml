
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Site</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.rtl.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-utilities.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.rtl.css" rel="stylesheet" />
    <style>
        body {
            background-color:pink;
            text-align: center;
        }

        .text-right {
            text-align: center;
        }

        .table-container {
            width: 80%;
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        th {
            background-color: deeppink;
            color: white;
        }

        tr:nth-child(even) {
            background-color:hotpink;
        }

        tr:nth-child(odd) {
            background-color:mistyrose;
        }
    </style>
</head>
<body style="direction:rtl">
    <nav class="navbar navbar-expand-lg navbar-light bg-light text-right">
        <a class="navbar-brand" href="#">سایت تستی من</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">درباره ما</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">محصولات</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">ارتباط با ما</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-right">به سایت تستی من خوش آمدید</h1>
        <p class="text-right">این سایت جهت تمرین ساخته شده واطلاعات جدول زیر صحت ندارد</p>
        <div class="text-right">
            <p><span id="currentDateTime"></span></p>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>نام</th>
                        <th>نام دسته بندی</th>
                        <th>قیمت</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.Category</td>
                        <td>@ViewBag.Price</td>
                    </tr>
                    <tr>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.Category</td>
                        <td>@ViewBag.Price</td>
                    </tr>
                    <tr>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.Category</td>
                        <td>@ViewBag.Price</td>
                    </tr>
                    <tr>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.Category</td>
                        <td>@ViewBag.Price</td>
                    </tr>
                    <tr>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.Category</td>
                        <td>@ViewBag.Price</td>
                    </tr>
                </tbody>
            </table>
        </div>

    <footer class="footer mt-auto py-3 bg-pink">
        <div class="container">
            <span class="text-muted text-right">©تمامی حقوق محفوظ است</span>
        </div>
        <div class="container">
            <span class="text-muted text-right">ساخته شده در سال 1403</span>
        </div>
    </footer>

    <!-- Bootstrap JS and jQuery -->
    <script src="~/Scripts/bootstrap.esm.js"></script>
    <script src="~/Scripts/bootstrap.esm.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        document.getElementById('currentDateTime').innerHTML = new Date().toLocaleString();
    </script>
</body>
</html>


